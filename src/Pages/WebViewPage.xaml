<Page
    x:Class="Bluebird.Pages.WebViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Bluebird.ViewModels"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Page.Resources>
        <Flyout x:Name="AddFavoriteFlyout" Placement="Right">
            <StackPanel>
                <TextBlock
                    x:Uid="AddFavorite"
                    Width="300"
                    FontSize="20" />
                <TextBlock Margin="0,5,0,0">Name</TextBlock>
                <TextBox x:Name="FavoriteTitle" Width="300" />
                <TextBlock>Url</TextBlock>
                <TextBox x:Name="FavoriteUrl" Width="300" />
                <Button
                    x:Uid="Add"
                    Margin="0,5,0,0"
                    Click="AddFavoriteButton_Click"
                    Tag="AddFavorite" />
            </StackPanel>
        </Flyout>
        <Flyout x:Name="QRCodeFlyout" Placement="Right">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid CornerRadius="5">
                    <Image
                        x:Name="QRCodeImage"
                        Grid.Row="0"
                        Width="160"
                        Height="160" />
                </Grid>
                <StackPanel
                    Grid.Row="1"
                    Margin="0,10,0,-5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <FontIcon
                        x:Uid="QRCodeNotice"
                        Margin="0,0,10,0"
                        Glyph="&#xE946;" />
                    <Button Click="QRCodeButton_Click">
                        <Button.Content>
                            <FontIcon Glyph="&#xE792;" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Flyout>
        <muxc:CommandBarFlyout
            x:Name="PageContextMenu"
            AlwaysExpanded="True"
            Placement="BottomEdgeAlignedLeft">
            <AppBarButton
                Click="AppBarButton_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoBack, Mode=OneWay}"
                Tag="Back">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE112;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Click="AppBarButton_Click" Tag="Refresh">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE149;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton
                Click="AppBarButton_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoForward, Mode=OneWay}"
                Tag="Forward">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE111;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton
                Click="AppBarButton_Click"
                Icon="Share"
                Tag="Share" />
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton
                    x:Uid="SelectAll"
                    Click="AppBarButton_Click"
                    Tag="SelectAll">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE14E;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton
                    x:Uid="Translate"
                    Click="AppBarButton_Click"
                    Tag="Translate">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE775;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Uid="ExportAs">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE792;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Uid="ExportAsPdf"
                                Click="MenuFlyoutItem_Click"
                                Text="Export as pdf">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEA90;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Uid="ExportAsTxt"
                                Click="MenuFlyoutItem_Click"
                                Tag="ExportAsTxt">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Document" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:Uid="Advanced">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xEC7A;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Uid="ViewSource"
                                Click="MenuFlyoutItem_Click"
                                Tag="ViewSource">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE943;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <!--  Disabled due to UWP apps not being allowed to use WebView2 DevTools  -->
                            <!--  It is being kept for a potential migration to WinUI or another platform  -->
                            <!--<MenuFlyoutItem
                                Click="MenuFlyoutItem_Click"
                                Tag="DevTools"
                                Text="DevTools">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEC7A;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>-->
                            <MenuFlyoutItem
                                x:Uid="TaskManager"
                                Click="MenuFlyoutItem_Click"
                                Tag="TaskManager">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE9D9;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>
        <muxc:CommandBarFlyout
            x:Name="TextContextMenu"
            AlwaysExpanded="True"
            Placement="BottomEdgeAlignedLeft">
            <AppBarButton
                x:Uid="CopyText"
                Click="AppBarButton_Click"
                Tag="CopyText"
                ToolTipService.ToolTip="Copy text">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE16F;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton
                    x:Uid="SelectAll"
                    Click="AppBarButton_Click"
                    Tag="SelectAll">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE14E;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton
                    x:Uid="SearchSelectionOnTheWeb"
                    Click="AppBarButton_Click"
                    Tag="Search">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE721;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>
        <muxc:CommandBarFlyout
            x:Name="LinkContextMenu"
            AlwaysExpanded="True"
            Placement="BottomEdgeAlignedLeft">
            <AppBarButton
                x:Uid="OpenLnkInNewTab"
                Click="AppBarButton_Click"
                Tag="OpenLnkInNewTab">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE8A7;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton
                x:Uid="CopyLink"
                Click="AppBarButton_Click"
                Tag="Copy">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE16F;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton
                x:Uid="ShareLink"
                Click="AppBarButton_Click"
                Icon="Share"
                Tag="ShareLink" />
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton
                    x:Uid="CopyLinkText"
                    Click="AppBarButton_Click"
                    Tag="CopyText">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE16F;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            x:Name="Sidebar"
            Grid.Column="0"
            Margin="5,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Button
                Click="SidebarButton_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoBack, Mode=OneWay}"
                Style="{StaticResource SidebarButton}"
                Tag="Back">
                <FontIcon Glyph="&#xE112;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="Refresh">
                <FontIcon Glyph="&#xE149;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoForward, Mode=OneWay}"
                Style="{StaticResource SidebarButton}"
                Tag="Forward">
                <FontIcon Glyph="&#xE111;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="ToggleUrlBox">
                <FontIcon Glyph="&#xE721;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="ReadingMode">
                <FontIcon Glyph="&#xE736;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Flyout="{x:Bind AddFavoriteFlyout}"
                Style="{StaticResource SidebarButton}"
                Tag="AddFavoriteFlyout">
                <FontIcon Glyph="&#xE734;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="Downloads">
                <FontIcon Glyph="&#xE118;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="GenQRCode">
                <FontIcon Glyph="&#xED14;" />
            </Button>
        </StackPanel>
        <Button
            x:Name="MuteBtn"
            Margin="5,0,0,5"
            VerticalAlignment="Bottom"
            Click="SidebarButton_Click"
            Style="{StaticResource SidebarButton}"
            Tag="Mute"
            Visibility="Collapsed">
            <FontIcon Glyph="&#xE767;" />
        </Button>
        <Grid Grid.Column="1" Style="{StaticResource PageBorder}">
            <!--  required to round wv2  -->
            <Grid CornerRadius="5">
                <muxc:WebView2
                    x:Name="WebViewControl"
                    x:FieldModifier="public"
                    CoreWebView2Initialized="WebViewControl_CoreWebView2Initialized"
                    Loaded="WebViewControl_Loaded" />
            </Grid>
        </Grid>
        <Grid
            x:Name="UrlBoxWrapper"
            Grid.Column="1"
            Height="32"
            MinWidth="300"
            MaxWidth="600"
            Margin="10"
            VerticalAlignment="Bottom"
            CornerRadius="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                Background="{StaticResource SystemControlAcrylicElementMediumHighBrush}"
                CornerRadius="5">
                <TextBox
                    x:Name="UrlBox"
                    x:Uid="UrlBox"
                    Grid.Column="0"
                    GotFocus="UrlBox_GotFocus"
                    IsSpellCheckEnabled="False"
                    KeyDown="UrlBox_KeyDown"
                    MaxLength="2048" />
            </Grid>
            <Border Grid.Column="1" />
            <Grid
                Grid.Column="2"
                Background="{StaticResource SystemControlAcrylicElementMediumHighBrush}"
                CornerRadius="5">
                <Button
                    Grid.Column="1"
                    Height="32"
                    Click="AISearchButton_Click"
                    Content="✨" />
            </Grid>
        </Grid>
        <muxc:ProgressBar
            x:Name="LoadingBar"
            Grid.Column="1"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Stretch"
            IsIndeterminate="True" />
    </Grid>
</Page>

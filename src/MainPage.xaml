<Page
    x:Class="Bluebird.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:favorites="using:Bluebird.Modules.Favorites"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Bluebird.ViewModels"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <Page.Resources>
        <Flyout x:Name="FavoritesFlyout">
            <Grid Margin="-5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Uid="Favorites"
                    Grid.Row="0"
                    FontSize="20" />
                <ListView
                    x:Name="FavoritesListView"
                    Grid.Row="1"
                    Width="300"
                    MaxHeight="500"
                    ItemsSource="{x:Bind viewmodels:SettingsViewModel.SettingsVM.FavoritesList, Mode=TwoWay}"
                    RightTapped="FavoritesListView_RightTapped"
                    SelectionChanged="FavoritesList_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="favorites:FavoriteItem">
                            <StackPanel Margin="0,10,0,10" ToolTipService.ToolTip="{x:Bind Url}">
                                <TextBlock
                                    FontSize="18"
                                    Text="{x:Bind Title}"
                                    TextTrimming="CharacterEllipsis" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemAccentColorDark1}"
                                    Text="{x:Bind Url}"
                                    TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ContextFlyout>
                        <muxc:CommandBarFlyout
                            x:Name="FavoritesContextMenu"
                            AlwaysExpanded="True"
                            Placement="BottomEdgeAlignedLeft">
                            <AppBarButton
                                x:Uid="CopyLink"
                                Click="FavContextItem_Click"
                                Tag="Copy">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE16F;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton
                                x:Uid="ShareLink"
                                Click="FavContextItem_Click"
                                Icon="Share"
                                Tag="ShareLink" />
                            <AppBarButton
                                Click="FavContextItem_Click"
                                Foreground="Red"
                                Icon="Delete"
                                Tag="Delete" />
                            <muxc:CommandBarFlyout.SecondaryCommands>
                                <AppBarButton
                                    x:Uid="CopyLinkText"
                                    Click="FavContextItem_Click"
                                    Tag="CopyText">
                                    <AppBarButton.Icon>
                                        <FontIcon Glyph="&#xE16F;" />
                                    </AppBarButton.Icon>
                                </AppBarButton>
                            </muxc:CommandBarFlyout.SecondaryCommands>
                        </muxc:CommandBarFlyout>
                    </ListView.ContextFlyout>
                </ListView>
            </Grid>
        </Flyout>
        <Flyout x:Name="RecentlyClosedTabsFlyout">
            <Grid Margin="-5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <muxc:InfoBar
                    Title="Warning"
                    Grid.Row="0"
                    IsClosable="False"
                    IsOpen="True"
                    Message="This feature is in beta"
                    Severity="Warning" />
                <TextBlock
                    Grid.Row="1"
                    FontSize="20"
                    Text="Recently closed tabs" />
                <ListView
                    x:Name="RecentlyClosedTabsListView"
                    Grid.Row="2"
                    Width="300"
                    MaxHeight="350"
                    ItemsSource="{x:Bind viewmodels:SettingsViewModel.SettingsVM.RecentlyClosedTabsList, Mode=TwoWay}"
                    SelectionChanged="RecentlyClosedTabsListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="favorites:FavoriteItem">
                            <StackPanel Margin="0,10,0,10">
                                <TextBlock
                                    FontSize="18"
                                    Text="{x:Bind Title}"
                                    TextTrimming="CharacterEllipsis" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource SystemAccentColorDark1}"
                                    Text="{x:Bind Url}"
                                    TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Flyout>
    </Page.Resources>
    <muxc:TabView
        x:Name="Tabs"
        Margin="0,-7,0,0"
        VerticalAlignment="Stretch"
        Background="Transparent"
        IsAddTabButtonVisible="False"
        Loaded="Tabs_Loaded"
        TabCloseRequested="Tabs_TabCloseRequested"
        TabItemsChanged="Tabs_TabItemsChanged"
        TabWidthMode="{x:Bind viewmodels:SettingsViewModel.SettingsVM.TabWidthMode, Mode=OneWay}">
        <muxc:TabView.TabStripHeader>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="BrowserMenuBtn"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource SidebarButton}">
                    <FontIcon Glyph="&#xE10C;" />
                    <Button.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                Click="BrowserMenuFlyoutItem_Click"
                                Tag="RecentlyClosedFlyout"
                                Text="Recently closed">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE81C;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Uid="Downloads"
                                Click="BrowserMenuFlyoutItem_Click"
                                Icon="Download"
                                Tag="Downloads" />
                            <MenuFlyoutItem
                                x:Uid="History"
                                Click="BrowserMenuFlyoutItem_Click"
                                Tag="History">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE81C;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem
                                x:Uid="Fullscreen"
                                Click="BrowserMenuFlyoutItem_Click"
                                Tag="Fullscreen">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE1D9;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem
                                x:Uid="Settings"
                                Click="BrowserMenuFlyoutItem_Click"
                                Icon="Setting"
                                Tag="Settings" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button
                    x:Name="FavoritesFlyoutButton"
                    VerticalAlignment="Bottom"
                    Click="FavoritesFlyoutButton_Click"
                    Style="{StaticResource SidebarButton}">
                    <Button.Content>
                        <FontIcon Glyph="&#xE728;" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </muxc:TabView.TabStripHeader>
        <muxc:TabView.TabStripFooter>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--  Stolen splitbutton from Windows Terminal  -->
                <!--  https://github.com/microsoft/terminal/blob/bc6f3e22757415e42e658597c60b40c003941289/src/cascadia/TerminalApp/TabRowControl.xaml#L55  -->
                <muxc:SplitButton
                    x:Name="NewTabButton"
                    Grid.Column="0"
                    Height="24"
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    Click="NewTabButton_Click"
                    Content="&#xE710;"
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="12">
                    <muxc:SplitButton.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="Styles/TabViewSplitButton.xaml" />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </muxc:SplitButton.Resources>
                    <muxc:SplitButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                x:Uid="NewTab"
                                Click="NewTabFlyoutItem_Click"
                                Tag="NewTab">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEC6C;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Uid="NewSplitTab"
                                Click="NewTabFlyoutItem_Click"
                                Tag="NewSplitTab">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xF57C;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </muxc:SplitButton.Flyout>
                </muxc:SplitButton>
                <Grid
                    x:Name="CustomDragRegion"
                    Grid.Column="1"
                    MinWidth="188"
                    Background="Transparent" />
            </Grid>
        </muxc:TabView.TabStripFooter>
        <muxc:TabView.Resources>
            <ResourceDictionary>
                <StaticResource x:Key="TabViewItemHeaderBackgroundSelected" ResourceKey="LayerFillColorDefaultBrush" />
            </ResourceDictionary>
        </muxc:TabView.Resources>
    </muxc:TabView>
</Page>
